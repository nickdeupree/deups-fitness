{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "lib": ["dom", "es2015"],
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    ".next/types/**/*.ts",
    "src/app/components/navigation/Navigation.tsx",
    "src/app/components/themeswitcher/ThemeSwitcher.tsx",
    "src/app/providers.tsx",
    "src/app/search/Search.tsx",
  ]
}
